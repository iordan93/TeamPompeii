@model PompeiiSquare.Server.Areas.VenueAdministrator.Models.VenueDeleteBindingModel

@{
    ViewBag.Title = "Delete Venue";
}

<h3>Are you sure you want to delete this?</h3>

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">@Html.DisplayFor(modelItem => Model.Name)</h3>
    </div>
    <div class="panel-body">
        <div class="well">
            <span class="venue-info">@Html.DisplayNameFor(model => model.Address): @Html.DisplayFor(modelItem => Model.Address)</span>
            <span class="venue-info">@Html.DisplayNameFor(model => model.Contact): @Html.DisplayFor(modelItem => Model.Contact)</span>
            <span class="venue-info">@Html.DisplayNameFor(model => model.PriceTier): @Html.DisplayFor(modelItem => Model.PriceTier)</span>
            <span class="venue-info">@Html.DisplayNameFor(model => model.Description): @Html.DisplayFor(modelItem => Model.Description)</span>
        </div>
    </div>
</div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" />
            @Html.ActionLink("Back to Venues", "Index", "Venues", new { Area = "VenueAdministrator" }, new { @class = "btn btn-primary" })

        </div>
    }

