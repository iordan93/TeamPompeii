@model PompeiiSquare.Server.Models.TipBindingModel

@using (@Html.BeginForm("Create", "Tips", new { area = "" }, FormMethod.Post, htmlAttributes: new { @class = "form-horizontal", id = "create-tip-form", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="add-tip well">
        <label for="tip-content" class="control-label col-md-2">Leave a tip:</label>
        <div class="input-group">
            @Html.EditorFor(model => model.Content, new { htmlAttributes = new { @class = "form-control", id = "tip-content", rows = 4 } })
            @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
            <input type="hidden" name="venueId" value="@Model.venueId" />
            <span class="input-group-btn"><input type="submit" class="btn btn-primary" value="Add" /></span>
        </div>
        <div class="form-group">
            <div class="pull-right">@Html.TextBoxFor(model => model.Photo, new { type = "file" })</div>
        </div>
    </div>
}
